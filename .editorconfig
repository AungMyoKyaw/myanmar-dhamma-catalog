# EditorConfig for consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx,mjs,cjs}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# HTML/CSS
[*.{html,htm,css,scss,less}]
indent_style = space
indent_size = 2

# SQL
[*.{sql}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Python (if you add Python later)
[*.py]
indent_style = space
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab

# Rust (if you add Rust later)
[*.rs]
indent_style = space
indent_size = 4

# Go (if you add Go later)
[*.go]
indent_style = tab
indent_size = 4
